<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edokter.DetailViewOnMaps">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundlogin"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tvPanggil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="33dp"
            android:clickable="true"
            android:drawableTop="@drawable/ic_panggilan_dokter"
            android:text="Panggil"
            android:textAlignment="center"
            android:textColor="@color/text_white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvReservasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/etnamainfo"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            android:layout_toEndOf="@+id/tvPanggil"
            android:layout_toRightOf="@+id/tvPanggil"
            android:clickable="true"
            android:drawableTop="@drawable/ic_reservasi"
            android:text="Resevasi"
            android:textAlignment="center"
            android:textColor="@color/text_white"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/etnamainfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPanggil"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:enabled="false"
            android:drawablePadding="12dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:textColorHint="@color/text_white"
            android:textColor="@color/text_white"
            android:inputType="textPersonName" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/etnamainfo"
            android:layout_marginTop="5dp"
            android:background="@color/text_white"
            android:id="@+id/view1" />

        <EditText
            android:id="@+id/etAlamatinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:drawablePadding="12dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_alamat_pasien"
            android:textColorHint="@color/text_white"
            android:textColor="@color/text_white"
            android:inputType="textPostalAddress" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/etAlamatinfo"
            android:layout_marginTop="5dp"
            android:background="@color/text_white"
            android:id="@+id/view3" />

        <EditText
            android:id="@+id/etNoinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:drawablePadding="12dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_no_hp"
            android:textColorHint="@color/text_white"
            android:textColor="@color/text_white"
            android:enabled="false"
            android:inputType="number" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/etNoinfo"
            android:layout_marginTop="5dp"
            android:background="@color/text_white"
            android:id="@+id/view4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etinfo"
            android:ems="10"
            android:enabled="false"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/view4"
            android:background="#0000"
            android:textColor="@color/text_white"
            android:drawableLeft="@drawable/ic_info_24dp"
            android:inputType="textLongMessage"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>


